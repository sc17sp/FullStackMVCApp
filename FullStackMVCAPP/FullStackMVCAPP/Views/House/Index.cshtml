@model IEnumerable<FullStackMVCAPP.Models.House>

@{
    ViewBag.Title = "Houses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/GameOfThrones.css" />
<h2>Houses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Words)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CastleId)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Words)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CastleId.Name)
        </td>
        <td>
            <button type="sumbit" value="Characters" class="btn btn-default">@Html.ActionLink($"{item.Name} Characters",
                                                                                              "HouseCharactersIndex",
                                                                                              "Character",
                                                                                              new { id = item.Id},
                                                                                              null)
            </button>
        </td>
    </tr>
}

</table>
